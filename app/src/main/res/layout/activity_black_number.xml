<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff2b2b2b">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_title_bg"
        android:orientation="horizontal">

        <TextView android:text="@string/black_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="111"
            android:textColor="#ffffff"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/btn_open_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:layout_margin="10dp"
            android:text="@string/black_setting_btn"
            />
        <Button
            android:id="@+id/btn_black_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:layout_margin="10dp"
            android:text="@string/black_btn"
            />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/black_list_id">

    </ListView>
</LinearLayout>
