<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff2b2b2b"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_title_bg"
    android:text="拦截设置"
    android:gravity="center"
    android:textSize="20sp"
    android:textColor="#ffffff"
    />
    <RelativeLayout
        android:id="@+id/rl_black_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_selected"
        android:clickable="true">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="开启骚扰拦截服务"
            android:textColor="@drawable/text_color_selector"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:textColor="@drawable/text_color_selector"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:text="关闭"/>

        <CheckBox
            android:id="@+id/cb_states"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:button="@drawable/checkbox_selector"
            android:clickable="false"
            android:layout_alignParentRight="true"/>
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@drawable/main_firstview_bg"
        android:layout_marginLeft="5dp"
        android:layout_height="1dp"></View>
</LinearLayout>